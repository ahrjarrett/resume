{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": false,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "useDefineForClassFields": true,
    "isolatedModules": true
  },
  "references": [
    { "path": "../../packages/core" },
    { "path": "../../packages/data" },
    { "path": "../../packages/pdf" }
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
